{{#if (and email git_username)}}

[user]
	username = {{git_email}}
	email = {{git_username}}
  
{{/if}}


[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
  
[pull]
	rebase = true

[init]
	defaultBranch = main

[core]
    pager = delta

[interactive]
    diffFilter = delta --color=always --line-numbers --dark

[delta]
    navigate = true    # use n and N to move between diff sections
    side-by-side = true

[merge]
    conflictstyle = diff3

[diff]
    tool = kitty
    guitool = kitty.gui
[difftool]
    prompt = false
    trustExitCode = true
[difftool "kitty"]
    cmd = kitty +kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
    cmd = kitty kitty +kitten diff $LOCAL $REMOTE


